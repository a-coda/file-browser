Screen {
    &:inline {
        height: 50vh;
    }
}

#tree-view {
    display: none;
    scrollbar-gutter: stable;
    overflow: auto;
    width: auto;
    height: 100%;
    dock: left;
}

FileBrowser.-show-tree #tree-view {
    display: block;
    max-width: 50%;
    border: solid;
}

#data-view {
    overflow: auto scroll;
    min-width: 100%;
    hatch: right $panel;
    border: solid;
}
#log-view {
    max-height: 10%;
    border: solid;
}

#data {
    width: auto;
}
